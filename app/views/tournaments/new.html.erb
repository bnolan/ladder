<% content_for :title do %><%= t '.title' %> - <%= t 'application.name' %><% end %>
<div class="page-header">
  <h1><%= t '.title' %></h1>
</div>

<%= form_for @tournament, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :placeholder => Tournament.human_attribute_name('name') %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit t('.start'), :class => 'btn btn-primary' %>
      <%= link_to t('.cancel'), tournaments_path, :class => 'btn' %>
    </div>
  </div>
<% end %>
