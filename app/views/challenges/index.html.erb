<% content_for :title do %><%= @challenge ? @challenge.versus : Challenge.model_name.human.pluralize %> - <%= t 'application.name' %><% end %>
<div class="page-header">
  <h1><%= Challenge.model_name.human.pluralize %></h1>
</div>

<% if @defending.any? %>
  <h2><%= t '.defending' %></h2>
  <ul>
    <% @defending.each do |challenge| %>
      <li><%= link_to challenge_path(challenge) do %><%= gravatar_image_tag challenge.challenger.email %> <%= challenge.challenger.name %> on <%= challenge.tournament.name %><% end %></li>
    <% end %>
  </ul>
<% end %>

<% if @challenging.any? %>
  <h2><%= t '.challenging' %></h2>
  <ul>
    <% @challenging.each do |challenge| %>
      <li><%= link_to challenge_path(challenge) do %><%= gravatar_image_tag challenge.defender.email %> <%= challenge.defender.name %> on <%= challenge.tournament.name %><% end %></li>
    <% end %>
  </ul>
<% end %>
