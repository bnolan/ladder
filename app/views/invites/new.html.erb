<div class="page-header">
  <h1><%= t '.title' %> <small><%= link_to @tournament.name, tournament_path(@tournament) %></small></h1>
</div>

<%= form_for [@tournament, @invite], :html => {:class => 'form-horizontal'} do |f| %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit Invite.model_name.human, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel'), tournament_path(@tournament), :class => 'btn' %>
    </div>
  </div>
<% end %>
